<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ch05.dao.User3Mapper">

    <insert id="insertUser3">
        insert into user3 values (#{uid},#{name},#{birth},#{hp},#{age});
    </insert>
    <select id ="selectUser3">
        select * from user3 where uid = #{uid};
    </select>
    <select id ="selectUser3s">
        select * from user3;
    </select>
    <update id ="updateUser3">
        update user3 set
            name = #{name},
            birth = #{birth},
            hp = #{hp},
            age = #{age}
            where uid = #{uid};


    </update>
    <delete id ="deleteUser3">
        delete from user3 where uid = #{uid};
    </delete>
</mapper>